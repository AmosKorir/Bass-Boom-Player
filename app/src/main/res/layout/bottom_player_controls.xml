<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    android:orientation="vertical"
    >
  <com.google.android.exoplayer2.ui.PlayerControlView
      android:id="@+id/control"
      android:layout_width="0dp"
      android:layout_height="80dp"
      android:layout_marginEnd="8dp"
      android:layout_marginTop="8dp"
      android:background="@color/colorPrimary"
      app:layout_constraintEnd_toStartOf="@+id/floatingActionButton"
      app:layout_constraintHorizontal_bias="0.0"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      app:show_timeout="0"
      app:controller_layout_id="@layout/custom_control_view"
      >

  </com.google.android.exoplayer2.ui.PlayerControlView>
  <com.google.android.exoplayer2.ui.PlayerControlView
      android:id="@+id/control2"
      android:layout_width="0dp"
      android:layout_height="80dp"
      android:layout_marginBottom="8dp"
      android:background="@color/colorPrimary"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintHorizontal_bias="1.0"
      app:layout_constraintStart_toStartOf="parent"
      app:controller_layout_id="@layout/big_exo_custom_layout"
      app:show_timeout="0"
      >

  </com.google.android.exoplayer2.ui.PlayerControlView>
  <com.google.android.material.floatingactionbutton.FloatingActionButton
      android:id="@+id/floatingActionButton"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginEnd="16dp"
      android:backgroundTint="@android:color/transparent"
      android:backgroundTintMode="src_in"
      android:clickable="true"
      app:layout_constraintBottom_toBottomOf="@+id/control"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintTop_toTopOf="@+id/control"
      app:fabSize="normal"
      app:srcCompat="@mipmap/ic_logo_round"
      />
  <ImageView
      android:id="@+id/imageView2"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginBottom="8dp"
      android:layout_marginEnd="8dp"
      android:layout_marginStart="8dp"
      android:layout_marginTop="8dp"
      android:background="@android:color/transparent"
      android:scaleX="3"
      android:scaleY="3"
      app:layout_constraintBottom_toTopOf="@+id/control2"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/control"
      app:srcCompat="@mipmap/music"
      />
</androidx.constraintlayout.widget.ConstraintLayout>